<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bettertrialbook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BetterTrialBook">
        <activity android:name=".forum.CreatePostActivity"></activity>
        <activity android:name=".SignUp" />
        <activity
            android:name=".ExperimentViewActivity"
            android:label="@string/title_activity_experiment_view"
            android:theme="@style/Theme.BetterTrialBook.NoActionBar" />
        <activity android:name=".forum.ForumActivity" />
        <activity android:name=".ProfileViewActivity" />
        <activity android:name=".ExperimentAddActivity" />

        <!-- https://stackoverflow.com/questions/4207880/android-how-do-i-prevent-the-soft-keyboard-from-pushing-my-view-up -->
        <activity android:name=".MainActivity"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>